doctype html
html(lang="es")
     head
       meta(charset="UTF-8")
       meta(name="viewport", content="width=device-width, initial-scale=1")
       script(defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js")
       script(src="https://kit.fontawesome.com/a5eb905d06.js" crossorigin="anonymous")
       script(src="https://cdn.jsdelivr.net/npm/sweetalert2@11")    
       script(src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.js")
       block scripts
       link(href="https://cdn.jsdelivr.net/npm/@sweetalert2/theme-dark@4/dark.css" rel="stylesheet")
       link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css")
       link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)  
       link(href='/styles/style-navbar.css' rel='stylesheet')
       link(rel='/styles/stylesheet' href='./style-footer.css')
       block link
       title #{Titulo}
     body.position-relative.bg-body-tertiary.pb-5.pt-0(data-bs-theme="dark")
       nav.navbar.navbar-expand-sm.navbar-dark.bg-dark(aria-label='Third navbar example')
         a.navbar-brand(href='/'): img.d-inline-block.align-text-top(src="/img/logo.png", alt="Logo" width="200" height="60")
         .container-fluid
           #navbarsExample03.collapse.navbar-collapse
             ul.navbar-nav.me-auto.mb-2.mb-sm-0
               li.nav-item.dropdown
                 a.nav-link.dropdown-toggle(href='#' data-bs-toggle='dropdown' aria-expanded='false') Vacunas
                 ul.dropdown-menu
                   li
                     a.dropdown-item(href='/compra') Comprar Lotes Vacunas
                   li
                   a.dropdown-item(href='/reasignarLotes') Reasignar Lotes de Vacunas a Centros 
                   li
                    a.dropdown-item(href='/aplicacionVacuna') Aplicar Vacuna  
                   li
                    a.dropdown-item(href='/vacunasDescarte') Descartar Lotes de Vacunas     
                  
               li.nav-item.dropdown
                 a.nav-link.dropdown-toggle(href='#' data-bs-toggle='dropdown' aria-expanded='false') Distribucion
                 ul.dropdown-menu
                   li
                     a.dropdown-item(href="/envioVacunas") Envio de Lotes de Vacunas a Provincias
                   li
                     a.dropdown-item(href='/envioVacunasCentros') Envio de Lotes de Vacunas a Centros
               li.nav-item.dropdown
                 a.nav-link.dropdown-toggle(href='#' data-bs-toggle='dropdown' aria-expanded='false') Control
                 ul.dropdown-menu
                   li
                     a.dropdown-item(href='/modCompra') Control Stock Nacion
                   li
                     a.dropdown-item(href='/depositoProvinciaStock') Control Stock Provincia
                   li
                     a.dropdown-item(href='/centrosStock') Control Stock Centros
               li.nav-item.dropdown
                 a.nav-link.dropdown-toggle(href='#' data-bs-toggle='dropdown' aria-expanded='false') Centros y Depocitos
                 ul.dropdown-menu
                   li
                     a.dropdown-item(href='/agregarCentro') Agregar un Centro de Vacunacion
                   li
                     a.dropdown-item(href='/agregarDepoNacion') Agregar un Deposito Nacional
                   li
                     a.dropdown-item(href='/agregarDepoProvincia') Agregar un Deposito Provincial
               li.nav-item.dropdown
                 a.nav-link.dropdown-toggle(href='#' data-bs-toggle='dropdown' aria-expanded='false') Informacion
                 ul.dropdown-menu
                   li
                     a.dropdown-item(href='/vacunasAplicadas') Vacunas Aplicadas
                   li
                     a.dropdown-item(href='/vacunasDescartadas') Vacunas Descartadas
                   li
                     a.dropdown-item(href='/lotesProvedor') Lote-Provedor de Vacunas

             .d-flex.gap-3
               ul.navbar-nav.me-auto.mb-2.mb-md-0
                li.nav-item
                  a.nav-link(href='#') #{userName}
                li.nav-item
                  a.nav-link(href=loginlogoutLink) #{loginlogoutName}

                
       block content
       footer.bg-tertiary.position-absolute.bottom-0.w-100.d-flex.flex-wrap.justify-content-between.align-items-center.py-3.my-4.border-top.mt-0.mb-0
         .col-md-4.d-flex.align-items-center.align-items-center.ms-5.my-auto
           a.mb-3.me-2.mb-md-0.text-body-secondary.text-decoration-none.lh-1(href='/')
            img(src="/img/logo.png", alt="Logo" width="120" height="40")
           
         ul.nav.col-md-4.justify-content-end.list-unstyled.d-flex.me-5
           li.ms-3
             a(href='#')
               i.fa-brands.fa-twitter.fa-bounce(style="color: #b4bcca;")
                 use(xlink:href='#twitter')
           li.ms-3
             a.text-body-secondary(href='#')
               i.fa-brands.fa-instagram.fa-bounce(style="color: #b4bcca;")
           li.ms-3
             a.text-body-secondary(href='#')
              i.fa-brands.fa-facebook.fa-bounce(style="color: #b4bcca;")
