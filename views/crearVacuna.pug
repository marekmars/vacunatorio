extends layout

block scripts
  script(defer src="scripts/alertas.js")

block content

  main.m-auto.container.mt-5.w-100.position-relative(data-bs-theme="dark")  
    h1.h1.text-center Crear Vacuna
    hr
    .d-flex.gap-5.form-floating.justify-content.align-items-center.mx-auto.col-8.text-center
        h3.h3.mx-auto Datos de la Nueva Vacuna 
    form#compraForm.form.row.g-3.w-100.mx-auto.mt-2(action="/crearVacuna", method="post" data-bs-theme="dark" onsubmit=`return confirmarCreacion(event)`)
      .mb-3.form-floating.d-flex.justify-content-center.mx-auto.col-12.col-md-12
        input#tipoVacuna.form-control(name="tipoVacuna" type="text" required)
        label(for="tipoVacuna")  Tipo de Vacuna 
      .mb-3.form-floating.d-flex.justify-content-center.mx-auto.col-12.col-md-12
       input#nombreComercial.form-control(name="nombreComercial" type="text" required)
       label(for="nombreComercial")  Nombre Comercial
      .mb-3.form-floating.d-flex.justify-content-center.mx-auto.col-12.col-md-12
       input#paisOrigen.form-control(name="paisOrigen"  type="text" required)
       label(for="paisOrigen")  Pais de Origen  
      .mb-3.form-floating.d-flex.justify-content-center.mx-auto.col-12.col-md-12
        input#nobreLaboratorio.form-control(name="nobreLaboratorio" type="text" required)
        label(for="nobreLaboratorio")  Nombre del Laboratorio 
      .mb-3.form-floating.d-flex.justify-content-center.mx-auto.col-12.col-md-12
        input#emailLaboratorio.form-control(name="emailLaboratorio" type="email" required)
        label(for="emailLaboratorio")  Email del Laboratorio 
      .mb-3.form-floating.d-flex.justify-content-center.mx-auto.col-12.col-md-12
        input#telefonoLaboratorio.form-control(name="telefonoLaboratorio" type="number" required)
        label(for="telefonoLaboratorio")  Telefono del Laboratorio 
     
      

      .btn-form.d-flex
        button.btn.btn-primary.mx-auto(type='submit') 
         i.fa-solid.fa-cart-shopping &nbsp; Crear

      - if (typeof alert !== "undefined")
        script.
          Swal.fire({
            title: '#{alertTitle}',
            text: '#{alertMessage}',
            icon: '#{alertIcon}',
            showConfirmButton: #{showConfirmButton},
            timer: #{timer}
          }).then(() => {
            window.location = '/#{ruta}';
          })

  
    
 